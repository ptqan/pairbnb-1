<div class="container push-down">
  <div class="row">
    <h1>Payment Page</h1>
    <%= form_for(@payment) do |f| %>
      <div class="field">
        <h2><%= @reservation.listing.name %></h2>
      </div>
      <div class="col-sm-4">
        <div class="lead">
        <h2><%= f.label :from %></h2><br>
        <p><%= @reservation.check_in %></p>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="lead">
          <h2><%= f.label :until %></h2><br>
          <p><%= @reservation.check_out %></p>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="lead">
          <h2><%= f.label :Total %></h2><br>
          <span class="label label-warning">RM <%= @reservation.total_sum %> </span>
        </div>
      </div>
      
      <div class="field">
        <%= f.hidden_field :reservation_id, value: @reservation.id %>
      </div>

      <div class="field">
        <%= f.hidden_field :total_price, value: @reservation.total_sum %>
      </div>

      <div class="field">
        <div id="dropin"></div>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Pay Now", class: "btn btn-danger"%>
      </div>
    <% end %>
    <script src="https://js.braintreegateway.com/js/braintree-2.22.2.min.js"></script>
    <script>
     braintree.setup("<%=@client_token%>", "dropin", {
       container: "dropin"
     });
    </script>
  </div>
</div>

