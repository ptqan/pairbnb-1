<div class="container push-down">
	<div class="row">
		<div class="col-sm-3">
			<div class="profile-pic">
				<% if @user.avatar.url == nil %>
					<%= image_tag "default-avatar.png" %>
				<% else %>
				<%= image_tag @user.avatar.medium.url %>
				<% end %>

			</div>
			<%= render 'sidebar' %>
		</div>
		<div class="col-sm-9">
			<div class="profile-info">
				<table>
					<tr>
						<td width="30%" class="bold">Name</td>
						<td><%= @user.name %></td>
					</tr>
					<tr>
						<td class="bold">Email</td>
						<td><%= @user.email %></td>
					</tr>
					<tr>
						<td colspan="2">
							<%= link_to "Edit Profile", edit_user_path %>
						</td>
					</tr>
				</table>
			</div>
		</div>
	</div>
</div>